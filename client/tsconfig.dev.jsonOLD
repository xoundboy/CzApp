{
	"compilerOptions": {
		"experimentalDecorators": true,
		"outDir": "build/dist",
		"module": "esnext",
		"target": "es5",
		"lib": ["es6", "dom", "es2015"],
		"sourceMap": true,
		"allowJs": true,
		"jsx": "react",
		"moduleResolution": "node",
		"rootDir": "src",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": false,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": false,
		"baseUrl": "src"
	},
	"exclude": [
		"node_modules",
		"build",
		"scripts",
		"acceptance-tests",
		"webpack",
		"jest",
		"src/setupTests.ts"
	],
	"presets": [["react-app", { "flow": false, "typescript": true }]]
}
